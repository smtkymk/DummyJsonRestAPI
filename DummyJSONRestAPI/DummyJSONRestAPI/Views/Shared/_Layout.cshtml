<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DummyJSONRestAPI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DummyJSONRestAPI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a href="https://re-os.com/"><img src="" height="100" width="150" /></a>
                <a class="navbar-brand" asp-area="/Product/Index/" >DummyJSONRestAPI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="GetAllProduct" >Product</a>
                        </li> 
                        <li class="nav-item">
                            <a >   -   </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-secondary" asp-area="" asp-controller="Product" asp-action="GetProductById">ProductById</a>
                        </li>
                        <li class="nav-item">
                            <a>   -   </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-warning" asp-area="" asp-controller="Product" asp-action="GetProductBySearch">ProductSearch</a>
                        </li>
                        <li class="nav-item">
                            <a>   -   </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-info" asp-area="" asp-controller="Product" asp-action="AddProduct">ProductAdd</a>
                        </li>
                        <li class="nav-item">
                            <a>   -   </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-danger" asp-area="" asp-controller="Product" asp-action="GetProductsCategories">Product Categories</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p >
                <center>© @DateTime.Now.Year - DummyJSONRestAPI | Project for RE-OS group</center>
            </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
